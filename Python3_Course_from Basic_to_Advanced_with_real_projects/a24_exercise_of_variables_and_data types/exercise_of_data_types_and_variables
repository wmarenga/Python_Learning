from datetime import datetime

first_name = 'Luiz OtÃ¡vio'
last_name = 'Miranda'
age = 18
year_of_birth = datetime.today().year - age
height_in_meters = 1.80


def legal_age(age): return "Yes" if age >= 18 else "No"


print('Name:', first_name)
print('Surname:', last_name)
